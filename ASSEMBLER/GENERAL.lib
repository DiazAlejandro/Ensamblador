IMPRIMIR MACRO CADENA
    MOV AH, 09H
    LEA DX, CADENA
    INT 21H
ENDM

;MACRO PARA LLENAR EL ARREGLO
LEER MACRO ARREGLO
    LOCAL LLENAR
    MOV SI, 0
    LLENAR:     
    	MOV AH, 01H
        INT 21H 
        MOV ARREGLO[SI], AL
        INC SI 
        CMP SI, 4
        JBE LLENAR
ENDM 

IMPRIMIR_CAR MACRO CAR
    MOV AH, 02H
    MOV CL, CAR
    INT 21H
ENDM

RECUPERA_COORD MACRO NUM
    MOV AX, NUM
    MOV BL,8 
    DIV BL 
ENDM

CURSORPOS MACRO FILA, COLUMNA
    MOV AH, 02H     ;FUNCIÓN PARA COLOCAR EL CURSOR
    MOV BH, 0H      ;MODO VIDEO 
    MOV DH, FILA    ;25 EN DECIMAL - FILAS
    MOV DL, COLUMNA ;80 EN DECIMAL - COLUMNAS
    INT 10H         ;INTERRUPCIÓN DE SERVICIOS DE VIDEO
ENDM

COLOREAR MACRO CAR, COLOR
    MOV AH,09H      ;ESCRIBIR CARACTER Y ATRIBUTO
    MOV AL,CAR      ;CARACTER
    MOV BL,COLOR    ;LETRAS
    MOV CX,1        ;REPETICIÓN 
    INT 10H         ;INTETRUPCIÓN
ENDM

.CODE
LEER_CAR PROC
    MOV AH, 01H     ;
    INT 21H
    RET
LEER_CAR ENDP

MOUSE PROC
    MOV AH,02H      ;ESTABLECER LINEAS DEL CURSOR
    MOV DX,0000H    
    MOV BH,17H 
    INT 10H
    RET
MOUSE ENDP

LIMPIA PROC
    MOV AX,0600H    ;FUNCIÓN PARA DESPLAZAR PANTALLA
    MOV BH,0FH      ;ATRIBUTO
    MOV CX,0000H    ;COORDENADA DE INICIO
    MOV DX,184FH    ;COORDENADA DE FIN
    INT 10H 
    RET
LIMPIA ENDP 
    
OCULTARPUNTERO PROC ;
    MOV AX, 02H     ;FUNCIÓN PARA MOSTRAR / OCULTAR MOUSE
    INT 33H
    RET
OCULTARPUNTERO ENDP
   
PAUSE PROC
    MOV AH, 07H     ;DIRIGIR ENTRADA DE CARACTER SIN ECO
    INT 21H
RET

