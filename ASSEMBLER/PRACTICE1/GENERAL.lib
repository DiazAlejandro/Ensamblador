IMPRIMIR MACRO CADENA
    MOV AH, 09H
    LEA DX, CADENA
    INT 21H
ENDM

;MACRO PARA LLENAR EL ARREGLO
LEER MACRO ARREGLO
    LOCAL LLENAR
    MOV SI, 0
    LLENAR:     
    	MOV AH, 01H
        INT 21H 
        MOV ARREGLO[SI], AL
        INC SI 
        CMP SI, 4
        JBE LLENAR
ENDM 

IMPRIMIR_CAR MACRO CAR
    MOV AH, 02H
    MOV CL, CAR
    INT 21H
ENDM

RECUPERA_COORD MACRO NUM
    MOV AX, NUM
    MOV BL,8 
    DIV BL 
ENDM

CURSORPOS MACRO FILA, COLUMNA
    MOV AH, 02H
    MOV BH, 0H
    MOV DH, FILA
    MOV DL, COLUMNA
    INT 10H
ENDM

COLOREAR MACRO CAR,COLOR
    MOV AH,09H
    MOV AL,CAR
    MOV BH,0
    MOV BL,COLOR
    MOV CX,1
    INT 10H
     
    MOV BH,0
    INC DL
    MOV AH,2H
    INT 10H
ENDM

